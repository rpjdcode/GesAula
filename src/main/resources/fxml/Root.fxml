<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <TabPane fx:id="tabPane" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefHeight="180.0" prefWidth="29.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="TOP_LEFT">
        <tabs>
          <Tab fx:id="grupoTab" text="Grupo" />
          <Tab fx:id="alumnosTab" text="Alumnos" />
        </tabs>
      </TabPane>
   </left>
   <top>
      <ToolBar fx:id="toolBar" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="toolNewButton" mnemonicParsing="false" onAction="#onNewButtonAction" text="Nuevo" />
            <TextField fx:id="toolFileNameText" promptText="Nombre del fichero" />
            <Button fx:id="toolSaveFileButton" defaultButton="true" mnemonicParsing="false" onAction="#onSaveFileAction" text="Guardar" />
        </items>
      </ToolBar>
   </top>
</BorderPane>
